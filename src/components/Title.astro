---
const { title } = Astro.props;
---

<div class="titleContainer">
  <div>
    <img src="/assets/title-decoration.webp" alt="Decorative magical flourish" role="presentation" loading="lazy" />
  </div>
  <h2>{title}</h2>
  <div>
    <img src="/assets/title-decoration-bottom.webp" alt="Decorative magical flourish" role="presentation" loading="lazy" />
  </div>
</div>

<style>
  img {
    width: 300px;
  }
  .titleContainer {
    font-size: 28px;
    text-align: center;
    margin-bottom: 20px;
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .titleContainer {
      opacity: 1;
      animation: none;
    }
  }
</style>
