<section>
  <video 
    src="/assets/hero.mp4" 
    autoplay 
    loop 
    muted
    playsinline
    preload="none"
    poster="/assets/bg.webp"
    aria-label="Hogwarts Legacy background video"
  >
    Your browser does not support the video tag.
  </video>
  
  <div class="hero-content">
    <div class="logo">
      <img 
        src="/assets/hero-logo.webp" 
        alt="Hogwarts Legacy logo - An immersive open-world action RPG set in the Harry Potter wizarding world" 
        loading="eager" 
      />
    </div>
    
    <p class="tagline">Your legacy awaits. Live the unwritten.</p>
    
    <div class="cta-container">
      <a href="#site-content" class="cta-button cta-primary">
        <span class="cta-text">Explore the Magic</span>
        <span class="cta-icon">✨</span>
      </a>
      <a href="/blog" class="cta-button cta-secondary">
        <span class="cta-text">Latest News</span>
      </a>
    </div>
  </div>
</section>

<style>
  section {
    height: 100vh;
    background-color: black;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Gradient overlay for better text readability */
  section::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.6) 100%
    );
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    width: 90%;
    max-width: 800px;
    animation: fadeInUp 1s ease-out;
  }

  .logo {
    margin-bottom: 2rem;
  }

  .logo img {
    width: 100%;
    max-width: 600px;
    height: auto;
    filter: drop-shadow(0 8px 24px rgba(0, 0, 0, 0.9));
    animation: float 3s ease-in-out infinite;
  }
  
  .tagline {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.8);
    margin: 0 0 2.5rem;
    font-weight: 400;
    letter-spacing: 0.5px;
  }
  
  .cta-container {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2.5rem;
    font-size: clamp(1rem, 2vw, 1.125rem);
    font-weight: 700;
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .cta-primary {
    background: linear-gradient(135deg, var(--color-gold) 0%, #cc8400 100%);
    color: #000;
    box-shadow: 0 8px 24px rgba(255, 165, 0, 0.4);
  }
  
  .cta-primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #ffb733 0%, var(--color-gold) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .cta-primary .cta-text,
  .cta-primary .cta-icon {
    position: relative;
    z-index: 1;
  }
  
  .cta-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }
  
  @media (hover: hover) {
    .cta-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 32px rgba(255, 165, 0, 0.6);
    }
    
    .cta-primary:hover::before {
      opacity: 1;
    }
    
    .cta-primary:hover .cta-icon {
      animation: sparkle 0.6s ease;
    }
    
    .cta-secondary:hover {
      background: rgba(255, 255, 255, 0.2);
      border-color: rgba(255, 255, 255, 0.5);
      transform: translateY(-2px);
    }
  }
  
  .cta-button:focus {
    outline: 3px solid var(--color-gold);
    outline-offset: 4px;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  @keyframes sparkle {
    0%, 100% { transform: scale(1) rotate(0deg); }
    50% { transform: scale(1.2) rotate(180deg); }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    section {
      height: 70vh;
      min-height: 500px;
    }
    
    .hero-content {
      width: 95%;
    }
    
    .logo {
      margin-bottom: 1.5rem;
    }
    
    .logo img {
      max-width: 85%;
    }
    
    .tagline {
      font-size: 1.125rem;
      margin-bottom: 2rem;
    }
    
    .cta-container {
      flex-direction: column;
      gap: 1rem;
    }
    
    .cta-button {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }

  @media (min-width: 641px) and (max-width: 1024px) {
    section {
      height: 80vh;
    }
    
    .logo img {
      max-width: 500px;
    }
  }

  /* Optimización para pantallas verticales */
  @media (max-aspect-ratio: 1/1) {
    video {
      width: auto;
      height: 100%;
    }
  }
  
  /* Reduce animations for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-content {
      animation: none;
    }
    
    .logo img {
      animation: none;
    }
    
    .cta-button {
      transition: none;
    }
  }
</style>
